<MainWindow>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: [100, 200, 100, 200]
        spacing: 20

        Label:
            text: "В какой класс поступаете?"
            color: (0, 0, 0, 1)
            font_size: 25

        Button:
            text: "8 класс"
            background_color: 20/255, 10/255, 250/255, 1
            font_size: 30
            on_release: root.eight_button_on_press()

        Button:
            text: "9 класс"
            background_color: 20/255, 10/255, 250/255, 1
            font_size: 30
            on_release: root.nine_button_on_press()

        Button:
            text: "10 класс"
            background_color: 20/255, 10/255, 250/255, 1
            font_size: 30
            on_release: root.ten_button_on_press()






