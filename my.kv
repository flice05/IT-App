<MainWindow>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: [dp(50), dp(100), dp(50), dp(150)]

        BoxLayout:
            Label:
                text: "В какой класс поступаете?"
                color: 0, 0, 0, 1
                font_size: dp(25)

        BoxLayout:
            orientation: "vertical"
            spacing: dp(5)
            Button:
                text: "8 класс"
                background_color: 20/255, 10/255, 250/255, 1
                font_size: dp(30)
                on_press:
                    root.manager.current = "eight"
                    root.manager.transition.direction = "left"
            Button:
                text: "9 класс"
                background_color: 20/255, 10/255, 250/255, 1
                font_size: dp(30)
                on_press:
                    root.manager.current = "nine"
                    root.manager.transition.direction = "left"
            Button:
                text: "10 класс"
                background_color: 20/255, 10/255, 250/255, 1
                font_size: dp(30)
                on_press:
                    root.manager.current = "ten"
                    root.manager.transition.direction = "left"






